<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5fa"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/layout_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:text="Hello World!"
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:gravity="end"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <android.support.design.widget.TextInputEditText

            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:paddingRight="40dp"
            android:background="@drawable/roundedttext"
            android:ems="10"
            android:hint="@string/txt_phone"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/input_register_bg"
            android:textColorHint="@color/input_register_bg"
            android:paddingStart="20dp"
            android:paddingEnd="40dp" />
        <android.support.design.widget.TextInputEditText

            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingRight="40dp"
            android:background="@drawable/roundedttext"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:ems="10"
            android:hint="@string/txt_password"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/input_register_bg"
            android:textColorHint="@color/input_register_bg"
            android:paddingStart="20dp"
            android:paddingEnd="40dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbutton"
            android:text="@string/btn_signin"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_forgot"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/input_register_bg"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_text_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/layout_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:weightSum="100">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="50"
            android:background="@color/color_background_button" />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_or"
            android:textSize="15sp"
            android:textColor="@color/color_background_button"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="50"
            android:background="@color/color_background_button"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_text_social"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@mipmap/facebook"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/btn_google"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@mipmap/google"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>