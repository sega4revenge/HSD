<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/border_dialog"
    >
    <ImageView
        android:id="@+id/img_barcode"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:maxWidth="250dp"
        android:text="Not found product! Would you like to add this product information to our system?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txt_out_scanbarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Trở lại"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:background="@drawable/radius_bottom_dialog"/>
        <TextView
            android:id="@+id/txt_ok_scanbarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tạo"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/radius_bottom_dialog_right"/>
    </LinearLayout>
</LinearLayout>