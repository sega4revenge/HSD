<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blur"></LinearLayout>
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/blur"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_marginLeft="10px"
            android:id="@+id/arrow_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Scan expiry date"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
          />
    </RelativeLayout>

    <TextView
        android:layout_below="@id/toolbar"
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="The following formats can be found:"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ex:"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="21/09/2018
21 09 2018
21.09.2018

21/09/18
21 09 18
21.09.18
"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text_shadow"
           />
        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="2018/09/21
2018 09 21
2018.09.21

18/09/21
18 09 21
18.09.21"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text_shadow"
            />
    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="The date format will be found with clear condition"
        android:textSize="15dp"
        android:textColor="@color/text_shadow"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"/>
</RelativeLayout>