<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_item"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/img"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ProgressBar
                android:id="@+id/progress_notification"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/im_product_noti"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:id="@+id/tv_hsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hết hạn: 12/10/2018"
                android:textColor="@color/text_hint" />
            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/red"
                android:textSize="16dp"
                android:text="@string/wellcome_hsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <TextView

            android:gravity="center"
            android:padding="5dp"
            android:background="@color/red"
            android:layout_below="@id/img"
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noti_create"
            android:textColor="@color/white"
            android:textSize="10sp" />





    <TextView
        android:visibility="gone"
        android:textSize="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundedtext_red"
        android:text="Warning"
        android:textColor="@color/white"
        android:layout_alignParentRight="true" />

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_status"
            android:gravity="right"
            android:text="10 giờ trước"
            android:textColor="@color/divider"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</LinearLayout>