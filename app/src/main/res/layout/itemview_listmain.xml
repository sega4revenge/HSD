<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/linlayout"
    >
    <LinearLayout
        android:id="@+id/ln_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_margin="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:id="@+id/photo_product"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_hint"
                    android:text="12/10/2018"
                    android:id="@+id/txt_ex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="11dp"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Sách Trên Đường Băng  Đường Băng "
                    android:id="@+id/txt_nameproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="17dp"
                    android:textColor="@color/text_color"
                    />
                <TextView
                    android:layout_marginTop="4dp"
                    android:text="1221010102"
                    android:id="@+id/txt_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:textSize="11dp"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
                <RelativeLayout
                    android:id="@+id/linbot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/txt_detail"
                    >
                    <TextView
                        android:id="@+id/txt_namegroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:maxWidth="100dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colordefault"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <View
        android:id="@+id/divide_shadow"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:elevation="3dp"
        android:visibility="gone" />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/search_key_line_16"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/txt_warring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_warring_item_cb"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>